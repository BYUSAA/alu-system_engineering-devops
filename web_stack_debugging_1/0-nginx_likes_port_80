#!/bin/bash

# Update package list and install Nginx if it's not installed
apt-get update
apt-get install -y nginx

# Modify the default server block to listen on port 80
sed -i 's/listen 80 default_server;/listen 80;/' /etc/nginx/sites-enabled/default

# Start Nginx
service nginx start

# Check if Nginx is listening on port 80
if curl -s -I http://localhost | grep -q "200 OK"; then
    echo "Nginx is running and listening on port 80."
else
    echo "Failed to start Nginx on port 80."
    exit 1
fi

