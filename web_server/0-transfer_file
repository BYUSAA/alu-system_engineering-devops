import paramiko
import sys

def transfer_file(path_to_file, ip, username, path_to_ssh_key):
    ssh = paramiko.SSHClient()
    ssh.set_missing_host_key_policy(paramiko.AutoAddPolicy())
    ssh.connect(ip, username=username, key_filename=path_to_ssh_key)

    sftp = ssh.open_sftp()
    sftp.put(path_to_file, f"~/")
    sftp.close()
    ssh.close()

if __name__ == "__main__":
    if len(sys.argv) != 5:
        print("Usage: python 0-transfer_file.py PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY")
        sys.exit(1)

    path_to_file = sys.argv[1]
    ip = sys.argv[2]
    username = sys.argv[3]
    path_to_ssh_key = sys.argv[4]

    transfer_file(path_to_file, ip, username, path_to_ssh_key)
