#!/usr/bin/env bash
# Script that installs Nginx and configures it with a custom 404 page and redirection for /redirect_me

# Update package list and install Nginx
sudo apt update -y
sudo apt install nginx -y

# Create custom 404 and index pages in the correct web root directory
sudo touch /var/www/html/index.html
sudo touch /var/www/html/404.html

# Populate the HTML files
echo "Holberton School" | sudo tee /var/www/html/index.html
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Create Nginx configuration with a redirect and custom 404 page
new_config="
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    # Redirect /redirect_me to YouTube
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Custom 404 error page
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
"

# Overwrite the default Nginx site configuration
echo "$new_config" | sudo tee /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo service nginx restart

