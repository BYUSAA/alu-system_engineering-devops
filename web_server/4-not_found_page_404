#!/usr/bin/env bash

# This script configures a new Ubuntu machine to return a custom 404 page
# that contains the string "Ceci n'est pas une page."

# Update the package list and install nginx if not already installed
apt-get update -y
apt-get install nginx -y

# Remove the default nginx HTML file
rm /var/www/html/index.nginx-debian.html

# Create a new HTML file for the custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx to listen on port 80 and handle 404 errors
echo "server {
    listen 80;
    server_name localhost;

    location / {
        root /var/www/html;
        index index.html;
        try_files \$uri \$uri/ =404;
    }

    error_page 404 /404.html;
}" > /etc/nginx/sites-available/default

# Restart nginx without using systemctl
service nginx restart

