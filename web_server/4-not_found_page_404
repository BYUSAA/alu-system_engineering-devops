#!/usr/bin/env bash
# This script configures Nginx to serve a custom 404 page with the text "Ceci n'est pas une page"

# Update and install Nginx
sudo apt update
sudo apt install -y nginx

# Create the custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/custom_404.html

# Modify the Nginx default site configuration
sudo sed -i '/server_name _;/a \    error_page 404 /custom_404.html;\n    location = /custom_404.html {\n        internal;\n    }' /etc/nginx/sites-available/default

# Reload Nginx to apply the changes
sudo systemctl reload nginx

